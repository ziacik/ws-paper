{
	"name": "ws-paper",
	"version": "1.0.0",
	"description": "Waveshare e-Paper high-level display library and CLI",
	"author": "František Žiačik <ziacik@gmail.com>",
	"repository": "",
	"license": "MIT",
	"keywords": [
		"waveshare",
		"paper",
		"e-paper",
		"cli"
	],
	"main": "./dist/tsc/main.js",
	"types": "./dist/tsc/main.d.ts",
	"bin": {
		"ws-paper": "./dist/esbuild/cli.js"
	},
	"scripts": {
		"start": "ts-node src/cli.ts",
		"lint": "eslint ./src",
		"test": "jest",
		"format": "prettier . --write",
		"clean": "rm -rf dist build package",
		"ts-node": "ts-node",
		"docs": "typedoc --entryPoints src/main.ts",
		"build": "tsc -p tsconfig.json",
		"build-all": "npm run clean && npm run  build && npm run esbuild-node && npm run esbuild-browser",
		"esbuild-node": "esbuild src/index.ts --bundle --platform=node --minify --sourcemap=external --outfile=dist/esbuild/cli.js",
		"esbuild-node:dev": "esbuild src/cli.ts --bundle --sourcemap=external --outfile=dist/esbuild/cli.js",
		"esbuild-node:watch": "esbuild src/cli.ts --bundle --watch --sourcemap=external --outfile=dist/esbuild/cli.js"
	},
	"devDependencies": {
		"@types/jest": "^26.0.21",
		"@types/node": "^15.0.1",
		"@types/rpio": "^2.4.1",
		"@typescript-eslint/eslint-plugin": "^4.19.0",
		"@typescript-eslint/parser": "^4.19.0",
		"esbuild": "^0.11.11",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"jest": "^26.6.3",
		"prettier": "^2.3.1",
		"ts-jest": "^26.5.4",
		"ts-node": "^9.1.1",
		"typedoc": "^0.20.35",
		"typescript": "^4.2.3"
	},
	"dependencies": {
		"image-pixels": "^2.2.2",
		"rpio": "^2.4.2",
		"svg-render": "^1.2.0"
	}
}
